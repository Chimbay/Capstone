{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client", "node"],
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@api/*": ["src/api/*"],
      "@debug/*": ["src/_debug/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@ui/*": ["src/ui/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
